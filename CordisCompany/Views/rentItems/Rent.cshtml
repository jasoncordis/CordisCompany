@model CordisCompany.Models.rentItem

@{
    ViewBag.Title = "Rentals";
}

<!-- The rental page is used to browse items and make orders -->

    <div class="rentalPage">

        <h2>Rentals</h2>

        <!-- Both rental items have a description and an HTML form which will be used for POST requests to update the server-->

        <div id = "rentInfo1">
