            <h3 style="font-size: 20px;  margin-left: 12px; margin-right: 15px">
                Horizontal Reach: 53' 9"
            </h3>
            <h3 style="font-size: 20px;  margin-left: 12px; margin-right: 15px">
                Ships from: Hercules, CA
            </h3>
            <h3 style="font-size: 20px;  margin-left: 12px; margin-right: 15px">
                Style: Roll & Fold
            </h3>
            <p style="font-size: 12px; margin-left: 12px; margin-right: 12px;">
                Concrete pumps are machines used to transfer liquid concrete from one area to another via steel or flexible concrete placing hoses.
            </p>
        </div>

        <div id = "rentImgForm1">

            <img src="~/images/pump1.jpg" style="width:400px;height:300px;">

         <!--The HTML form contains all information about the item that is specified in the rentItems model. When submitting the form, all of the
             form info is used to makes a POST request in the server which adds the order, and then redirects the user to the Orders page to view their orders. -->

            @using (Html.BeginForm())
            {
                Random rnd = new Random();
                int id1 = rnd.Next(1, 1000);

                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @Value = id1 } })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.itemName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.itemName, new { htmlAttributes = new { @class = "form-control", @Value = "TZ Mountain Lion" } })
                            @Html.ValidationMessageFor(model => model.itemName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.reach1, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.reach1, new { htmlAttributes = new { @class = "form-control", @Value = 53 } })
                            @Html.ValidationMessageFor(model => model.reach1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.reach2, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.reach2, new { htmlAttributes = new { @class = "form-control", @Value = 9 } })
                            @Html.ValidationMessageFor(model => model.reach2, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.imgString, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.imgString, new { htmlAttributes = new { @class = "form-control", @Value = "~/img/pump1.jpg" } })
                            @Html.ValidationMessageFor(model => model.imgString, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.style, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.style, new { htmlAttributes = new { @class = "form-control", @Value = "Hercules, CA" } })
                            @Html.ValidationMessageFor(model => model.style, "", new { @class = "text-danger" })
