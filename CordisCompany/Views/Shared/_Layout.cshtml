<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CordisCompany</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Load javascript and css pages so they can be used by main pages -->
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <script src="~/Content/javascript.js" type="text/javascript"></script>

</head>
<body style="background-color: #8cd60b;">
    <!-- The top bootstrap navigation bar includes a company logo and links for the Orders, Messages, and Logout-->
    <div class="navbar navbar-expand-lg navbar-light bs-side-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img src="~/images/logo.PNG" style="width:200px;height:40px;"></a>
                <!-- Navigation features are placed on the upper right of the page -->
                <div style="position: absolute; right: 0; padding-right: 35px;">

                    <a class="topNavButton" href="@Url.Action("Index", "rentItems")">
                        Orders
                    </a>

                    <a class="topNavButton" href="@Url.Action("Index", "messages")">
                        Messages
                    </a>

                    <a class="topNavButton" href="@Url.Action("Index", "Home")">
                        Logout
                    </a>
                    <a class="topNavButton">
                    </a>
                </div>

            </div>
        </div>
    </div>

    <div class="container body-content">
    <!-- All page bodies consist of a wrapper div containing the sidebar navigation and a main page div.
    Both divs are inside one container and placed next to each other so that the sidebar is on the left side of the main page.-->
        <div class="container" id="sidebar">
            <div id="wrapper" class="wrapper">
                <div class="nav navbar-left">
                    <ul class="nav">
                        <li>

                            <!-- Sidebar buttons consist of a link as well as a glyphicon icon related to the page -->

                            <a class="sideNavButton" href="@Url.Action("Index", "Home")">
                                <span class="glyphicon glyphicon-home ">  Home </span>
                            </a>

                            <a class="sideNavButton" href="@Url.Action("Locations", "Home")">
                                <span class="glyphicon glyphicon-map-marker ">  Locations </span>
                            </a>

                            <a class="sideNavButton" href="@Url.Action("Training", "Home")">
                                <span class="glyphicon glyphicon-star "> Training </span>
                            </a>
                            <a class="sideNavButton" href="@Url.Action("Rent", "rentItems")">
                                <span class="glyphicon glyphicon-shopping-cart"> Rentals </span>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Cordis Company </p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>

<style>
    .topNavButton {
       padding-left:10px; 
       color:black;
       font-weight:bold;
       font-size:20px;

    }
</style>